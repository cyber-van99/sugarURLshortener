<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="favicon.png">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <title>URL Shortener</title>
  </head>
  <div class="container">
    <body>
      <h1 class="mTitle">SUGAR URL SHORTENER</h1>
      <form action="/short" method="post">
        <input required placeholder="Enter Full URL" type="text" name="fullUrl" id="fullUrl" />
        <button class="btn btn-success">Shorten</button>
      </form>
      <ul class="list-group">
        <% response.forEach(url => {%>
            <li class="list-group-item">Full URL: <%= url.fullUrl %>
                <br> Short URL : <a href="<%= url.shortUrl %>"><%= url.shortUrl %></a></li>

        <% } ) %>
      </ul>
    </body>
  </div>
</html>
